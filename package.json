{
  "name": "@athenna/athenna",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "bin": {
    "athenna": "./bootstrap/main.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "app",
    "bootstrap",
    "config",
    "database",
    "lang",
    "providers",
    "resources",
    "routes",
    "storage",
    ".athennarc.json",
    ".athennarc.prod.json"
  ],
  "scripts": {
    "start": "node artisan serve",
    "start:dev": "node artisan serve --watch",
    "build": "node artisan build",
    "test": "npm run --silent lint:fix && node artisan test",
    "test:debug": "npm run --silent lint:fix && cross-env NODE_DEBUG=athenna:* node --inspect artisan test",
    "test:coverage": "c8 npm run --silent test",
    "lint:fix": "eslint \"{app,bootstrap,config,database,providers,resources,routes,storage,tests}/**/*.ts\" --fix"
  },
  "type": "module",
  "imports": {
    "#app/*": "./app/*.js",
    "#app": "./app/index.js",
    "#bootstrap/*": "./bootstrap/*.js",
    "#bootstrap": "./bootstrap/index.js",
    "#config/*": "./config/*.js",
    "#config": "./config/index.js",
    "#database/*": "./database/*.js",
    "#database": "./database/index.js",
    "#lang/*": "./lang/*.js",
    "#lang": "./lang/index.js",
    "#providers/*": "./providers/*.js",
    "#providers": "./providers/index.js",
    "#facades/*": "./providers/facades/*.js",
    "#facades": "./providers/facades/index.js",
    "#resources/*": "./resources/*.js",
    "#resources": "./resources/index.js",
    "#routes/*": "./routes/*.js",
    "#routes": "./routes/index.js",
    "#storage/*": "./storage/*.js",
    "#storage": "./storage/index.js",
    "#tests/*": "./tests/*.js",
    "#tests": "./tests/index.js"
  },
  "dependencies": {
    "@athenna/artisan": "^4.28.0",
    "@athenna/common": "^4.28.0",
    "@athenna/config": "^4.13.0",
    "@athenna/core": "^4.23.0",
    "@athenna/ioc": "^4.13.0",
    "@athenna/logger": "^4.14.0",
    "@athenna/view": "^4.11.0",
    "reflect-metadata": "^0.2.1",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@athenna/test": "^4.20.0",
    "@athenna/tsconfig": "^4.12.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.7"
  },
  "c8": {
    "all": true,
    "include": [
      "app/**/*.ts"
    ],
    "exclude": [],
    "reporter": [
      "text-summary",
      "lcovonly",
      "html"
    ],
    "report-dir": "./tests/coverage",
    "check-coverage": true
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "semi": false,
    "printWidth": 80,
    "overrides": [
      {
        "files": "tests/**/*",
        "options": {
          "printWidth": 120
        }
      }
    ]
  },
  "eslintIgnore": [],
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "globals": {
      "ioc": true,
      "Env": true,
      "Path": true,
      "Config": true
    },
    "plugins": [
      "prettier",
      "@typescript-eslint"
    ],
    "extends": [
      "standard",
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/eslint-recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "camelcase": "off",
      "dot-notation": "off",
      "prettier/prettier": "error",
      "no-useless-constructor": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  }
}
